<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://project.byshell.org/more/schema/global">
	<!-- 页面装饰器配置 -->
	<pageDecorate enable="false">
		<processor name="default" creator="org.moreframework.view.decorate.parser.FreemarkerHtmlParser">
			<templatePath>{MORE_WEB_HOME}/template.htm</templatePath>
		</processor>
		<!-- 缺省的装饰器 -->
		<!-- name：装饰名，templatePath：装饰模板 -->
		<decorator name="default" contentType="text/html" refParser="default">
			<pattern>/*</pattern>
			<pattern>/*</pattern>
		</decorator>
		<decorator name="dec1" contentType="text/html" refParser="default">
			<pattern>/*</pattern>
			<pattern>/*</pattern>
		</decorator>
	</pageDecorate>
	<!-- freemarker 配置，onError当模板处理发生异常时的处理方式。模式：ThrowError（抛出异常）、PrintOnConsole（打印到控制台或日志）、Warning（忽略，仅仅产生一条警告消息）PrintOnPage（打印到页面） -->
	<freemarker enable="true" onError="ThrowError">
		<!-- freemarker模板后缀名逗号间隔多个. -->
		<suffixSet>*.ftl,*.html</suffixSet>
		<!-- 模板解析的内容响应到客户端的类型 -->
		<contentType>text/html</contentType>
		<!-- Configuration对象创建工厂 -->
		<configurationFactory>org.moreframework.view.freemarker.support.DefaultFreemarkerFactory</configurationFactory>
		<!-- 模板装载器（配置不支持动态更新） -->
		<templateLoader>
			<!-- <PathLoader>c:\abc</PathLoader> -->
			<!-- <PredefineLoader> -->
			<!-- <templateBody key="" type="Resource|File|String(default)|URL">ssss</templateBody> -->
			<!-- <templateBody key="" type="Resource|File|String(default)|URL">ssss</templateBody> -->
			<!-- </PredefineLoader> -->
			<!-- -->
			<!-- 工作目录中的webapp文件夹 -->
			<PathLoader>{MORE_WORK_HOME}/webapp</PathLoader>
			<!-- Web网站根 -->
			<PathLoader>{MORE_WEB_ROOT}/</PathLoader>
			<!-- classPath路径下指定的位置 -->
			<ClassPathLoader>/META-INF/webapp</ClassPathLoader>
		</templateLoader>
		<!-- 使用Configurable.setSetting(String,String)方法进行配置。 -->
		<settings>
			<!-- 默认页面编码UTF-8 -->
			<default_encoding>utf-8</default_encoding>
			<!-- 输出编码格式UTF-8 -->
			<output_encoding>utf-8</output_encoding>
			<!-- 是否开启国际化false -->
			<localized_lookup>false</localized_lookup>
			<!-- null值测处理配置 -->
			<classic_compatible>true</classic_compatible>
		</settings>
	</freemarker>
</config>