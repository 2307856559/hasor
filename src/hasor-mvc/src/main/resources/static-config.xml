<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:root="http://project.hasor.net/hasor/schema/main" xmlns="http://project.hasor.net/hasor/schema/hasor-mvc">
	<!-- 框架配置,包扫描覆盖范围 -->
	<hasor.loadPackages>net.hasor.mvc.*</hasor.loadPackages>
	<!-- 默认要装载的模块 -->
	<hasor.modules>
		<module class="net.hasor.mvc.controller.support.WebControllerPlugin" />
		<module class="net.hasor.mvc.restful.support.RestfulServicesPlugin" />
		<module class="net.hasor.mvc.result.ResultPlugin" />
	</hasor.modules>

	<!-- http://project.hasor.net/hasor/schema/hasor-mvc 命名空间的配置，不支持跟随配置文件动态更新配置。 -->
	<hasor-mvc>
		<!-- Controller配置，defaultProduces 默认响应类型 ; -->
		<controller intercept="*.do">
			<!-- 方法忽略的方法（逗号分割多组方法名），注意：在这里配置的忽略会应用到所有action上（支持重复配置共同生效） -->
			<globalIgnore>equals,hashCode,toString,getClass,wait,notify,notifyAll</globalIgnore>
		</controller>

		<!-- restful 服务配置，onPath是服务基础路径，这个Filter的排序很低 -->
		<restfulServices onPath="/*" sortBy="10000" />
	</hasor-mvc>
</config>