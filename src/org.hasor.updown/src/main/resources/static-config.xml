<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://project.hasor.net/hasor/schema/global">
	<!-- httpServlet文件上传服务配置 -->
	<updownService enable="false">
		<!-- name：服务名 -->
		<!-- maxSize：上传服务允许的最大请求数据长度。默认：0(无限制) -->
		<!-- minSize：上传服务允许的最小请求数据长度。默认：0(无限制) -->
		<!-- allowMulti：是否允许一个请求中多个上传实体请求 -->
		<!-- allowFiles：允许的文件类型 -->
		<upPoint maxSize="4MB" minSize="0" allowMulti="false" allowFiles="*.*" actionPath="updown.up" />

		<downPoint actionPath="updown.down" />
	</updownService>
</config>