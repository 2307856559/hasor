<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://project.hasor.net/hasor/schema/global">
	<!-- Web部分的配置 -->
	<httpServlet>
		<!-- Web请求遇到异常后轮询errorHook的次数。 -->
		<errorCaseCount>5</errorCaseCount>
		<!-- 请求响应编码设置 -->
		<requestEncoding requestEncoding="utf-8" responseEncoding="utf-8" />
		<!-- Action配置，enable：是否启用Action功能。 模式：mode:RestOnly（rest风格）、ServletOnly（中央servlet）、Both（两者同时使用） -->
		<!-- defaultProduces 默认响应类型 -->
		<actionServlet enable="true" mode="Both" intercept="*.do" defaultProduces="">
			<!-- 方法忽略的方法（逗号分割多组方法名），注意：在这里配置的忽略会应用到所有action上 -->
			<ignoreMethod></ignoreMethod>
		</actionServlet>
		<!-- （配置不支持动态更新）资源装载器 -->
		<resourceLoader enable="true" cacheDir="httpservlet.resourceloader.classpath" contentTypes="js,css,gif,ico,jpg,jpeg,png,swf,swc,flv,mp3,wav,avi">
			<!-- <zipLoader>{HASOR_WEBROOT}/pic.zip</zipLoader> -->
			<pathLoader>{HASOR_WORK_HOME}/webapp</pathLoader>
			<pathLoader>{HASOR_WEBROOT}/</pathLoader>
			<classpathLoader>/META-INF/webapp</classpathLoader>
		</resourceLoader>
	</httpServlet>
</config>
