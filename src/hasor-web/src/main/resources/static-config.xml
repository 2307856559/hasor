<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:root="http://project.hasor.net/hasor/schema/main" xmlns="http://project.hasor.net/hasor/schema/hasor-web">
	<!-- http://project.hasor.net/hasor/schema/main命名空间默认配置 -->
	<!-- <root:config> -->
	<!-- <root:hasor.loadPackages></root:hasor.loadPackages> -->
	<!-- </root:config> -->
	<!-- ========================================================================= -->
	<!-- 框架配置 -->
	<hasor>
		<!-- 包扫描覆盖范围，逗号间隔（支持重复配置共同生效） -->
		<loadPackages>net.hasor.web.*,net.hasor.gift.*</loadPackages>
	</hasor>
	<environmentVar>
		<!-- 资源缓存路径 -->
		<HTTP_CACHE_PATH>%HASOR_WORK_HOME%/cache/httpservlet.resourceloader.classpath</HTTP_CACHE_PATH>
	</environmentVar>
	<!-- Hasor Web，不支持跟随配置文件动态更新配置。 -->
	<hasor-web>
		<!-- 请求响应编码设置 -->
		<encoding requestEncoding="utf-8" responseEncoding="utf-8" />
		<!-- Controller配置，defaultProduces 默认响应类型 ; -->
		<controller enable="true" intercept="*.do">
			<!-- 方法忽略的方法（逗号分割多组方法名），注意：在这里配置的忽略会应用到所有action上（支持重复配置共同生效） -->
			<globalIgnore>equals,hashCode,toString,getClass,wait,notify,notifyAll</globalIgnore>
		</controller>
		<!-- 资源装载器 -->
		<resourceLoader enable="false" contentTypes="js,css,gif,ico,jpg,jpeg,png,swf,swc,flv,mp3,wav,avi">
			<!-- <zipLoader>{HASOR_WEBROOT}/pic.zip</zipLoader> -->
			<!-- **需要配置，否则会导致资源装载器反复尝试从loader中装载** -->
			<pathLoader>%HASOR_WEBROOT%/</pathLoader>
			<classpathLoader>/META-INF/webapp</classpathLoader>
		</resourceLoader>
	</hasor-web>
</config>