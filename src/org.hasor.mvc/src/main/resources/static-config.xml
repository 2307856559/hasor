<?xml version="1.0" encoding="UTF-8"?>
<root:config xmlns:root="http://project.hasor.net/hasor/schema/main" xmlns="http://project.hasor.net/hasor/schema/hasor-servlet">
	<!-- 框架配置 -->
	<hasor>
		<!-- 包扫描覆盖范围，逗号间隔（支持重复配置共同生效） -->
		<loadPackages>org.hasor.mvc.*</loadPackages>
	</hasor>
	<environmentVar>
		<!-- 资源缓存路径 -->
		<HTTP_CACHE_PATH>%HASOR_WORK_HOME%/cache/httpservlet.resourceloader.classpath</HTTP_CACHE_PATH>
	</environmentVar>
	<!-- Hasor MVC -->
	<hasor-mvc>
		<!-- Action配置，enable：是否启用Action功能。 模式：mode:RestOnly（rest风格）、ServletOnly（中央servlet）、Both（两者同时使用） -->
		<!-- defaultProduces 默认响应类型 -->
		<actionServlet enable="true" mode="Both" intercept="*.do" defaultProduces="">
			<!-- 方法忽略的方法（逗号分割多组方法名），注意：在这里配置的忽略会应用到所有action上（支持重复配置共同生效） -->
			<ignoreMethod>equals,hashCode,toString,getClass,wait,notify,notifyAll</ignoreMethod>
		</actionServlet>
		<!-- 资源装载器 -->
		<resourceLoader enable="true" contentTypes="js,css,gif,ico,jpg,jpeg,png,swf,swc,flv,mp3,wav,avi">
			<!-- <zipLoader>{HASOR_WEBROOT}/pic.zip</zipLoader> -->
			<pathLoader>%HASOR_WORK_HOME%/webapp</pathLoader>
			<!-- **需要配置，否则会导致资源装载器反复尝试从loader中装载** -->
			<pathLoader>%HASOR_WEBROOT%/</pathLoader>
			<classpathLoader>/META-INF/webapp</classpathLoader>
		</resourceLoader>
		<!-- （仅当启动时生效）页面装饰器配置 -->
		<pageDecorate enable="false">
			<!-- <processor name="default" creator="org.hasor.view.decorate.parser.freemarker.FreemarkerHtmlParser"> -->
			<!-- <templatePath>%HASOR_WEBROOT%/template.htm</templatePath> -->
			<!-- </processor> -->
			<!-- 缺省的装饰器 -->
			<!-- name：装饰名，templatePath：装饰模板 -->
			<!-- <decorator contentType="text/html" refParser="default"> -->
			<!-- <pattern>/*</pattern> -->
			<!-- <pattern>/*</pattern> -->
			<!-- </decorator> -->
			<!-- <decorator contentType="text/html" refParser="default"> -->
			<!-- <pattern>/*</pattern> -->
			<!-- <pattern>/*</pattern> -->
			<!-- </decorator> -->
		</pageDecorate>
		<!-- 请求转发映射 -->
		<!-- <httpRequestMapping enable="true"> -->
		<!-- 文件匹配 -->
		<!-- <fileMapping startWith="/" forwardTo="/index.htm" type="forward" /> -->
		<!-- 目录匹配 -->
