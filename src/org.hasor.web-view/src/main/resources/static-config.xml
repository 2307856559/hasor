<?xml version="1.0" encoding="UTF-8"?>
<root:config xmlns:root="http://project.hasor.net/hasor/schema/main" xmlns="http://project.hasor.net/hasor/schema/hasor-web-view">
	<!-- 框架配置 -->
	<hasor>
		<!-- 包扫描覆盖范围，逗号间隔（支持重复配置共同生效） -->
		<loadPackages>org.hasor.view.decorate.*,org.hasor.view.template.*</loadPackages>
	</hasor>
	<!-- （仅当启动时生效）页面装饰器配置 -->
	<pageDecorate enable="false">
		<!-- <processor name="default" creator="org.hasor.view.decorate.parser.freemarker.FreemarkerHtmlParser"> -->
		<!-- <templatePath>%HASOR_WEBROOT%/template.htm</templatePath> -->
		<!-- </processor> -->
		<!-- 缺省的装饰器 -->
		<!-- name：装饰名，templatePath：装饰模板 -->
		<!-- <decorator contentType="text/html" refParser="default"> -->
		<!-- <pattern>/*</pattern> -->
		<!-- <pattern>/*</pattern> -->
		<!-- </decorator> -->
		<!-- <decorator contentType="text/html" refParser="default"> -->
		<!-- <pattern>/*</pattern> -->
		<!-- <pattern>/*</pattern> -->
		<!-- </decorator> -->
	</pageDecorate>
	<!-- （仅当启动时生效）模板配置，onError当模板处理发生异常时的处理方式。模式：ThrowError（抛出异常）、PrintOnConsole（打印到控制台或日志）、Warning（忽略，仅仅产生一条警告消息）PrintOnPage（打印到页面） -->
	<template enable="true" onError="ThrowError">
		<!-- 模板后缀名逗号间隔多个（支持重复配置共同生效） -->
		<suffixSet>*.ftl</suffixSet>
		<!-- 模板解析的内容响应到客户端的类型 -->
		<contentType>text/html</contentType>
	</template>
</root:config>