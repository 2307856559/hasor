<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://project.hasor.net/hasor/schema/main">
	<!-- 框架配置 -->
	<hasor>
		<!-- 包扫描覆盖范围，逗号间隔（支持重复配置共同生效） -->
		<loadPackages>org.platform.*</loadPackages>
	</hasor>
	<environmentVar>
		<!-- 程序工作空间基础目录（绝对地址） -->
		<HASOR_WORK_HOME>./test-work</HASOR_WORK_HOME>
	</environmentVar>
	<!-- Web部分的配置（配置不支持动态更新） -->
	<httpServlet>
		<!-- 资源装载器 -->
		<resourceLoader>
			<classpathLoader>/</classpathLoader>
			<zipLoader>%HASOR_WEBROOT%/pic.zip</zipLoader>
		</resourceLoader>
	</httpServlet>
	<!-- （仅当启动时生效）页面装饰器配置 -->
	<pageDecorate enable="true">
		<processor name="free" creator="org.hasor.view.decorate.parser.freemarker.FreemarkerHtmlParser">
			<templatePath>/template.htm</templatePath>
		</processor>
		<decorator contentType="text/html;charset=UTF-8" refParser="free">
			<pattern>/*</pattern>
		</decorator>
	</pageDecorate>
	<template>
		<!-- 模板后缀名逗号间隔多个（支持重复配置共同生效） -->
		<suffixSet>*.html,*.htm</suffixSet>
	</template>
</config>