<?xml version="1.0" encoding="UTF-8"?>
<root:config xmlns:root="http://project.hasor.net/hasor/schema/main" xmlns="http://project.hasor.net/hasor/schema/hasor-core">
	<!-- 框架配置 -->
	<framework>
		<!-- （该配置在重载配置文件之后不会影响已有结果） -->
		<!-- 包扫描覆盖范围，逗号间隔（支持重复配置共同生效） -->
		<loadPackages>org.hasor.context.*,org.hasor.annotation.*</loadPackages>
		<!-- 启用注解功能支持 -->
		<annotation>true</annotation>
		<!-- 执行事件的线程池大小，注意：已经被安排Timer执行的事件，是不受生效之后的池大小限制的 -->
		<eventThreadPoolSize>20</eventThreadPoolSize>
		<!-- （该配置在重载配置文件之后不会影响已有结果） -->
		<!-- Timer定时器执行配置,单位毫秒。可选的配置：FixedDelay(固定间隔)、FixedRate(固定周期) -->
		<timerEvent type="FixedDelay">1000</timerEvent>
		<!-- 是否强迫所有模块都必须正常启动 -->
		<forceModule>false</forceModule>
	</framework>
	<!-- 工作空间设置（不支持环境变量） -->
	<workspace>
		<!-- 程序工作空间基础目录（绝对地址） -->
		<workDir>.</workDir>
		<!-- 程序的文件数据目录（默认相对workDir地址，可以通过设置absolute属性为true表示一个绝对地址） -->
		<dataDir absolute="false">/files</dataDir>
		<!-- 程序运行期间所需的临时数据存放地址（默认相对baseDir地址，可以通过设置absolute属性为true表示一个绝对地址） -->
		<tempDir absolute="false">/temp</tempDir>
		<!-- 程序运行时生成的缓存数据存放位置（默认相对baseDir地址，可以通过设置absolute属性为true表示一个绝对地址） -->
		<cacheDir absolute="false">/cache</cacheDir>
		<!-- 程序运行时生成的日志目录（默认相对baseDir地址，可以通过设置absolute属性为true表示一个绝对地址） -->
		<logDir absolute="false">/cache</logDir>
		<!-- 插件&模块 的配置目录（默认相对workDir地址，可以通过设置absolute属性为true表示一个绝对地址） -->
		<pluginDir absolute="false">/plugins</pluginDir>
	</workspace>
	<!-- 用于配置当前命名空间所定义的模块依赖的其他模块类 -->
	<!-- <dependency> -->
	<!-- <module></module> -->
	<!-- </dependency> -->
</root:config>