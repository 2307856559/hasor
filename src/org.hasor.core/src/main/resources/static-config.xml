<?xml version="1.0" encoding="UTF-8"?>
<root:config xmlns:root="http://project.hasor.net/hasor/schema/main" xmlns="http://project.hasor.net/hasor/schema/hasor-core">
	<!-- http://project.hasor.net/hasor/schema/main命名空间默认配置 -->
	<root:hasor>
		<root:loadPackages>org.*,com.*,net.*</root:loadPackages>
	</root:hasor>
	<!-- ========================================================================= -->
	<!-- 框架配置 -->
	<hasor>
		<!-- （该配置在重载配置文件之后不会影响已有结果） -->
		<!-- 包扫描覆盖范围，逗号间隔（支持重复配置共同生效） -->
		<loadPackages>org.hasor.context.*,org.hasor.servlet.*</loadPackages>
		<!-- 执行事件的线程池大小，注意：已经被安排Timer执行的事件，是不受生效之后的池大小限制的 -->
		<eventThreadPoolSize>20</eventThreadPoolSize>
		<!-- 是否强迫所有模块都必须正常启动 -->
		<forceModule>false</forceModule>
		<!-- （仅在启动时生效）Web部分的配置 -->
		<httpServlet>
			<!-- Web请求遇到异常后轮询errorHook的次数。 -->
			<errorCaseCount>1</errorCaseCount>
			<!-- 请求响应编码设置 -->
			<requestEncoding requestEncoding="utf-8" responseEncoding="utf-8" />
		</httpServlet>
	</hasor>
	<!-- 工作空间设置 -->
	<environmentVar>
		<!-- 程序工作空间基础目录 -->
		<HASOR_WORK_HOME>./work</HASOR_WORK_HOME>
		<!-- 临时文件位置 -->
		<HASOR_TEMP_PATH>%HASOR_WORK_HOME%/temp</HASOR_TEMP_PATH>
		<!-- 日志存放位置 -->
		<HASOR_LOG_PATH>%HASOR_WORK_HOME%/cache</HASOR_LOG_PATH>
		<!-- 插件目录 -->
		<HASOR_PLUGIN_PATH>%HASOR_WORK_HOME%/plugins</HASOR_PLUGIN_PATH>
		<!-- 模块配置目录 -->
		<HASOR_PLUGIN_SETTINGS>%HASOR_WORK_HOME%/settings</HASOR_PLUGIN_SETTINGS>
	</environmentVar>
</root:config>