<?xml version="1.0" encoding="UTF-8"?>
<root:config xmlns:root="http://project.hasor.net/hasor/schema/main" xmlns="http://project.hasor.net/hasor/schema/hasor-core">
	<!-- 框架配置 -->
	<hasor>
		<!-- （该配置在重载配置文件之后不会影响已有结果） -->
		<!-- 包扫描覆盖范围，逗号间隔（支持重复配置共同生效） -->
		<loadPackages>org.hasor.context.*,org.hasor.annotation.*</loadPackages>
		<!-- 启用注解功能支持 -->
		<annotation>true</annotation>
		<!-- 执行事件的线程池大小，注意：已经被安排Timer执行的事件，是不受生效之后的池大小限制的 -->
		<eventThreadPoolSize>20</eventThreadPoolSize>
		<!-- （该配置在重载配置文件之后不会影响已有结果） -->
		<!-- Timer定时器执行配置,单位毫秒。可选的配置：FixedDelay(固定间隔)、FixedRate(固定周期) -->
		<timerEvent type="FixedDelay">1000</timerEvent>
		<!-- 是否强迫所有模块都必须正常启动 -->
		<forceModule>false</forceModule>
	</hasor>
	<!-- 工作空间设置 -->
	<environmentVar>
		<!-- 程序工作空间基础目录 -->
		<HASOR_WORK_HOME>./</HASOR_WORK_HOME>
		<!-- 临时文件位置 -->
		<HASOR_TEMP_PATH>%HASOR_WORK_HOME%/temp</HASOR_TEMP_PATH>
		<!-- 日志存放位置 -->
		<HASOR_LOG_PATH>%HASOR_WORK_HOME%/cache</HASOR_LOG_PATH>
		<!-- 插件目录 -->
		<HASOR_PLUGIN_PATH>%HASOR_WORK_HOME%/plugins</HASOR_PLUGIN_PATH>
		<!-- 模块配置目录 -->
		<HASOR_PLUGIN_SETTINGS>%HASOR_WORK_HOME%/settings</HASOR_PLUGIN_SETTINGS>
	</environmentVar>

</root:config>