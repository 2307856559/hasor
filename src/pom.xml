	<!-- 构建描述 -->
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>GBK</encoding>
					<!-- <compilerId>eclipse</compilerId> -->
				</configuration>
				<dependencies>
					<!-- <dependency> -->
					<!-- <groupId>org.codehaus.plexus</groupId> -->
					<!-- <artifactId>plexus-compiler-eclipse</artifactId> -->
