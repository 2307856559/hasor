<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<filter>
		<filter-name>moreContext</filter-name>
		<filter-class>org.more.submit.support.web.TopFilter</filter-class>
		<init-param>
			<!-- 指定配置文件位置 -->
			<param-name>configFile</param-name>
			<param-value>/WEB-INF/more-config.xml</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>moreContext</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>moreContext</servlet-name>
		<servlet-class>org.more.submit.support.web.TopFilter</servlet-class>
		<init-param>
			<!-- 指定配置文件位置 -->
			<param-name>configFile</param-name>
			<param-value>/WEB-INF/more-config.xml</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>moreContext</servlet-name>
		<url-pattern>/more</url-pattern>
	</servlet-mapping>
	
	
</web-app>