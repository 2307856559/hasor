<?xml version="1.0" encoding="UTF-8"?>
<project name="More_WebSpring" default="run">
	<description>部署例子项目。</description>
	<!-- ================================================================ -->
	<!-- 如果需要将该web项目部署到其他地方运行，修改workDir为要部署的目标位置即可。 -->
	<property name="workDir" value="work" />
	<property name="src" value="src" />
	<property name="webRoot" location="WebContent" />
	<property name="libDir" location="lib" />
	<!-- ================================================================ -->
	<target name="run">
		<copydir dest="${workDir}" src="${webRoot}" />
		<copydir dest="${workDir}/WEB-INF/lib" src="${libDir}/more" />
		<copydir dest="${workDir}/WEB-INF/lib" src="${libDir}/spring" />
		<copydir dest="${workDir}/WEB-INF/lib" src="${libDir}/apache-commons" />
	</target>
</project>