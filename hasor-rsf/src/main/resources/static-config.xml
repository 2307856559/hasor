<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:root="http://project.hasor.net/hasor/schema/main" xmlns="http://project.hasor.net/hasor/schema/hasor-mvc-web">
	<!-- 框架配置 -->
	<hasor>
		<!-- 包扫描范围 -->
		<loadPackages>net.hasor.rsf.*</loadPackages>
		<!-- Hasor-RSF 专用 -->
		<rsfConfig address="localhost" port="6000">
			<serializeType>
				<!-- JSON-格式序列化 -->
				<serialize name="Json">
					<encoder>net.hasor.rsf.serialize.coder.FastJson_DecoderEncoder</encoder>
					<decoder>net.hasor.rsf.serialize.coder.FastJson_DecoderEncoder</decoder>
				</serialize>
				<!-- Java-原生序列化 -->
				<serialize name="Java">
					<encoder>net.hasor.rsf.serialize.coder.Java_DecoderEncoder</encoder>
					<decoder>net.hasor.rsf.serialize.coder.Java_DecoderEncoder</decoder>
				</serialize>
				<!-- Hessian-格式序列化 -->
				<serialize name="Hessian">
					<encoder>net.hasor.rsf.serialize.coder.Hessian_DecoderEncoder</encoder>
					<decoder>net.hasor.rsf.serialize.coder.Hessian_DecoderEncoder</decoder>
				</serialize>
			</serializeType>
		</rsfConfig>
	</hasor>
</config>