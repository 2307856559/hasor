<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<!-- 如果不配置listener则applicationContext.xml需要放置在classpath下。 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<filter>
		<filter-name>moreContext</filter-name>
		<filter-class>org.more.submit.web.support.SubmitRoot</filter-class>
		<init-param>
			<param-name>buildClass</param-name>
			<param-value>org.more.submit.casing.spring.SpringBuilder</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>moreContext</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- ================================================================ -->
	<servlet>
		<servlet-name>moreContext</servlet-name>
		<servlet-class>org.more.submit.web.support.SubmitRoot</servlet-class>
		<init-param>
			<param-name>buildClass</param-name>
			<param-value>org.more.submit.casing.spring.SpringBuilder</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>moreContext</servlet-name>
		<url-pattern>/more</url-pattern>
	</servlet-mapping>
</web-app>