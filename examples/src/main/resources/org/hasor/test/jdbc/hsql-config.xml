<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://project.hasor.net/hasor/schema/main">
	<!-- 框架配置 -->
	<hasor>
		<!-- 包扫描覆盖范围，逗号间隔（支持重复配置共同生效） -->
		<loadPackages>org.hasor.test.jdbc.*</loadPackages>
	</hasor>
	<environmentVar>
		<!-- 程序工作空间基础目录（绝对地址） -->
		<HASOR_WORK_HOME>./test-work</HASOR_WORK_HOME>
	</environmentVar>
	<hasor-jdbc>
		<dataSourceSet default="localDB">
			<dataSource name="localDB" dsFactory="net.hasor.plugins.datasource.factory.C3p0Factory">
				<driver>org.hsqldb.jdbcDriver</driver>
				<url>jdbc:hsqldb:mem:aname</url>
				<user>sa</user>
				<password></password>
			</dataSource>
		</dataSourceSet>
	</hasor-jdbc>
</config>