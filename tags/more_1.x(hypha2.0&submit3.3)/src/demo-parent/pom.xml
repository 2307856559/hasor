<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.byshell</groupId>
		<artifactId>more-parent</artifactId>
		<version>Final</version>
	</parent>
	<artifactId>demo-parent</artifactId>
	<version>Final</version>
	<packaging>pom</packaging>
	<!-- -->
	<dependencies>
		<dependency>
			<groupId>org.byshell</groupId>
			<artifactId>more-core</artifactId>
			<version>[1.0.0-a01,)</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>tomcat-maven-plugin</artifactId>
				<configuration>
					<path>/</path>							<!-- content路径 -->
					<port>8080</port>						<!-- 端口 -->
					<serverXml></serverXml>					<!-- 指定自已的server.xml文件 -->
					<contextFile></contextFile>				<!-- 指定自己的context.xml文件 -->
					<configurationDir></configurationDir>	<!-- 改变(自定义)tomcat配置文件目录 -->
					<systemProperties></systemProperties>	<!-- 携带一些系统变量，例如jvm参数,是map类型 -->
					<tomcatWebXml></tomcatWebXml>			<!-- 指定web.xml文件，默认在WEB-INF/下 -->
					<uriEncoding>utf-8</uriEncoding>		<!-- uri编码 -->
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>